            "responseCode": 404,
            "routes": {
                ".*": "/src/templates/404.html.tpl"
            }
        },
        "status": {
            "routes": {
                "/status": "\\BackbonePhp\\Status\\StatusController::handleStatusRequest"
            }
        },
        "config": {
            "routes": {
                "/config": "\\BackbonePhp\\Config\\ConfigController::handleFrontendConfigRequest"
            }
        },
        "home": {
            "pageTemplate": "/src/templates/page.html.tpl",
            "appTitle": "BackbonePHP",
            "pageTitle": "Welcome",
            "routes": {
                "/": "/src/templates/welcome.html.tpl"
            }
        }
    }
}
